                        <!-- Espace pour le texte -->
                        <ColumnDefinition Width="Auto"/>
                        <!-- Espace pour l'image -->
                    </Grid.ColumnDefinitions>
                    <TextBox Text="Podcast Pluriel" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" FontFamily="Curlz MT" FontSize="20" Foreground="#FF0C0101" Background="Transparent" BorderThickness="0"/>
                    <Image Source="/image/im3.png" HorizontalAlignment="Left" Margin="10,0,0,0"/>
                </Grid>
            </Border>

            <Border Background="#FFE4EDEC" BorderBrush="#FFF4EDED" BorderThickness="1" HorizontalAlignment="Left" Height="50" Margin="464,313,0,0" VerticalAlignment="Top" Width="336" CornerRadius="40">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <!-- Espace pour le texte -->
                        <ColumnDefinition Width="Auto"/>
                        <!-- Espace pour l'image -->
                    </Grid.ColumnDefinitions>
                    <TextBox Text="Ondes inspirantes" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" FontFamily="Curlz MT" FontSize="20" Foreground="#FF0C0101" Background="Transparent" BorderThickness="0"/>
                    <Image Source="/image/im4.png" HorizontalAlignment="Left" Margin="10,0,0,0"/>
                </Grid>
            </Border>

        </Grid>

        <TextBox HorizontalAlignment="Left" Margin="195,84,0,0" TextWrapping="Wrap" Text="Most played album" VerticalAlignment="Top" Width="144" FontWeight="Bold" FontFamily="Arial Rounded MT Bold" FontSize="14" BorderBrush="Transparent" Background="Transparent" Foreground="#FFFCFCFC"/>

    </Grid>
</Page>
